<h1><%=  @cocktail.name %></h1>

<ul>
<% @doses.each do |dose| %>
<li>
<%= dose.ingredient.name + ":"%>
<%= dose.description %>
<%= link_to  cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
</li>
<% end %>
</ul>


<%= link_to 'All cocktails', cocktails_path %>
<br>
<%= link_to 'Add new doses', new_cocktail_dose_path(@cocktail) %>

